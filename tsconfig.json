{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./global.d.ts"
        ],
        "baseUrl": ".",
        "paths": {
            "@*": ["*"],
            "@global": ["global.d.ts"],
            "@configs/*": ["configs/*"],
            "@controllers/*": ["controllers/*"],
            "@docs/*": ["docs/*"],
            "@interfaces/*": ["interfaces/*"],
            "@middlewares/*": ["middlewares/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@utils/*": ["utils/*"]
        }
    }
}