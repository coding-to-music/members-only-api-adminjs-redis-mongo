{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "extends": "@tsconfig/esm/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "target": "ES3",
        "module": "es2020",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "build",
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "typeRoots": [
            "./node_modules/@types",
            "src/global.d.ts"
        ],
        "baseUrl": ".",
        "paths": {
            "@*": ["*"],
            "@global": ["src/global.d.ts"],
            "@configs/*": ["src/configs/*"],
            "@controllers/*": ["src/controllers/*"],
            "@docs/*": ["src/docs/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@src/*": ["src/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}