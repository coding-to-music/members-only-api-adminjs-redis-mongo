{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "target": "es2021",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "importHelpers": true,
        "typeRoots": [
            "./node_modules/@types",
            "src/global.d.ts"
        ],
        "baseUrl": ".",
        "paths": {
            "@*": ["*"],
            "@/*": ["src/*"],
            "@admin/*": ["src/admin/*"],
            "@auth/*": ["src/auth/*"],
            "@config/*": ["src/config/*"],
            "@docs/*": ["src/docs/*"],
            "@media/*": ["src/media/*"],
            "@message/*": ["src/message/*"],
            "@post/*": ["src/post/*"],
            "@profile/*": ["src/profile/*"],
            "@routes/*": ["src/routes/*"],
            "@shared/*": ["src/shared/*"],
            "@user/*": ["src/user/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}